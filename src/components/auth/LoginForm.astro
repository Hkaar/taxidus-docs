---
import { cn } from "@/lib/utils";

import { Button, buttonVariants } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";

import { ArrowLeft, KeyRound, User } from "lucide-react";
import PasswordInput from "@/components/ui/password-input";
---

<form class="flex flex-col gap-5 items-center w-1/2">
  <div class="flex flex-col gap-2 items-center">
    <h1 class="text-3xl font-bold tracking-tighter">Login to your account</h1>
    <span class="text-sm text-gray-500 dark:text-neutral-500"
      >Enter your account details below</span
    >
  </div>

  <div class="flex flex-col gap-1.5 w-full">
    <Label htmlFor="username">Email or Username</Label>
    <div class="relative">
      <Input
        id="username"
        placeholder="Email or username"
        type="text"
        required
        name="username"
        autoComplete="username"
        className="ps-9"
      />

      <User
        size={18}
        strokeWidth={1.5}
        className="absolute top-3 ms-3 stroke-gray-500 dark:stroke-neutral-600"
      />
    </div>
  </div>

  <div class="flex flex-col gap-1.5 w-full">
    <div class="flex items-center gap-3 justify-between">
      <Label htmlFor="password">Password</Label>

      <a href="/" class="text-sm text-gray-500 dark:text-neutral-600"
        >Forgot your password?</a
      >
    </div>
    <div class="relative">
      <PasswordInput
        id="password"
        placeholder="Enter your password"
        autoComplete="current-password"
        name="password"
        required
        inputClassName="ps-9"
        client:load
      />

      <KeyRound
        size={18}
        strokeWidth={1.5}
        className="absolute top-3 ms-3 stroke-gray-500 dark:stroke-neutral-600"
      />
    </div>
  </div>

  <div class="flex gap-2 flex-col w-full">
    <Button className="w-full"> Login </Button>
    <a href="/" class={cn(buttonVariants({ variant: "outline" }), "w-full")}>
      <ArrowLeft size={18} /> Back to home
    </a>
  </div>

  <a href="/sign-up" class="text-sm font-medium">
    Don't have an account yet? <span class="underline">Sign up now!</span>
  </a>
</form>
